{
  "name": "grc",
  "displayName": "Grace NTUA Compiler",
  "description": "Syntax highlighting for Grace NTUA Compiler",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages"
  ],
	"icon": "assets/icon.png",
  "contributes": {
    "languages": [
      {
        "id": "grace",
        "aliases": ["Grace", "grace"],
        "extensions": [".grc"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "grace",
        "scopeName": "source.grc",
        "path": "./syntaxes/grace.tmLanguage.json"
      }
    ]
  },
  "main": "./client/out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./client/",
    "watch": "tsc -p ./client/ --watch",
    "postinstall": "node ./client/node_modules/vscode/bin/install"
  },
  "activationEvents": [
    "onLanguage:Grace"
  ],
  "devDependencies": {
    "typescript": "^4.0.0",
    "vscode": "^1.1.37",
    "vscode-languageclient": "^7.0.0",
    "@types/node": "^14.14.0"
  },
  "dependencies": {
    "vscode-languageclient": "^7.0.0"
  }
}
